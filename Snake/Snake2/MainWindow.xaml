<Window x:Name="loaded" x:Class="Snake2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Closing="Loaded_Closing"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake2"
        mc:Ignorable="d"
        Background="#303030"
        Title="MainWindow" Height="373.572" Width="371.149" KeyDown="Window_KeyDown" Loaded="Loaded_Loaded">
    <Grid>
        <Canvas  x:Name="canv" Background="#404040" HorizontalAlignment="Left" Height="200" Margin="16,18,0,0" VerticalAlignment="Top" Width="200">
            <Rectangle Fill="ForestGreen" x:Name="food" HorizontalAlignment="Left" Height="12" Stroke="Black" VerticalAlignment="Top" Width="12" RenderTransformOrigin="0.54,0.139" Canvas.Left="132" Canvas.Top="110" RadiusY="10.5" RadiusX="10.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.684"/>
                        <TranslateTransform X="-5.364" Y="1.362"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Canvas>
        <Label HorizontalAlignment="Left" Margin="232,10,0,0" VerticalAlignment="Top">
            <Label Content="Score: 0" FontFamily="Trebuchet MS" x:Name="lblScore" Foreground="Silver" FontSize="20" RenderTransformOrigin="-0.675,0.087"/>
        </Label>
        <CheckBox x:Name="wsad" Checked="CheckBoxWSAD_Checked" FontFamily="Trebuchet MS" Foreground="Silver" VerticalContentAlignment="Bottom" Content="W S A D" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,88,0,0"/>
        <CheckBox x:Name="arrows" Checked="Arrows_Checked" FontWeight="Bold" FontSize="14" FontFamily="Trebuchet MS" Foreground="Silver" VerticalContentAlignment="Bottom" Content="&#x21E7; &#x21E9; &#x21E6; &#x21E8;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,108,0,0"/>
        <Label Content="Control" x:Name="lblctrl" FontFamily="Trebuchet MS" Foreground="Silver" HorizontalAlignment="Left" Margin="238,57,0,0" VerticalAlignment="Top" Width="122"/>
        <Button Content="Start" Click="Button_Click" HorizontalAlignment="Left" Margin="129,247,0,0" VerticalAlignment="Top" Width="75" Height="35"/>
        <Label Content="Speed" FontFamily="Trebuchet MS" Foreground="Silver" HorizontalAlignment="Left" Margin="238,142,0,0" VerticalAlignment="Top" Width="71"/>
        <CheckBox x:Name="slow" Checked="Slow_Checked" FontFamily="Trebuchet MS" Foreground="Silver" VerticalContentAlignment="Bottom" Content="Slow" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,172,0,0"/>
        <CheckBox x:Name="mediumspeed" Checked="Mediumspeed_Checked" FontFamily="Trebuchet MS" Foreground="Silver" VerticalContentAlignment="Bottom" Content="Medium" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,192,0,0"/>
        <CheckBox x:Name="fast" Checked="Fast_Checked"  FontFamily="Trebuchet MS" Foreground="Silver" VerticalContentAlignment="Bottom" Content="Fast" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,212,0,0"/>

    </Grid>
</Window>
